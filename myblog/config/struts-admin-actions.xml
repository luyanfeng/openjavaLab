<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
<!-- 后台 -->
	<package name="admin" namespace="/admin" extends="default">
		<default-interceptor-ref name="authenic-stack" />
		<action name="*" method="{1}" class="adminAction">
			<result type="dispatcher" name="index">/WEB-INF/admin/{1}.jsp</result>
			<result type="dispatcher" name="about">/WEB-INF/admin/{1}.jsp</result>
			<result type="json" name="json-saveAbout" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
		</action>
	</package>
<!-- 文章 -->
	<package name="article" namespace="/admin/article" extends="admin">
		<action name="*" method="{1}" class="articleAction">
			<result type="json" name="json-switchReview" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="json" name="json-save" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="json" name="json-delete" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="chain" name="forward-types" >
				<param name="actionName">list</param>
				<param name="namespace">/admin/type</param>
			</result>
			<result type="chain" name="forward-tags" >
				<param name="actionName">list</param>
				<param name="namespace">/admin/tag</param>
			</result>
			<result type="dispatcher" >/WEB-INF/admin/main/article/{1}.jsp</result>
			<result type="dispatcher" name="input">/WEB-INF/admin/main/article/writer.jsp</result>
		</action>
	</package>
<!-- 类型 -->
	<package name="type" namespace="/admin/type" extends="admin">
		<action name="*" method="{1}" class="typeAction">
			<result type="json" name="json-save" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="json" name="json-delete" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="json" name="json-switchHidden" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="dispatcher" >/WEB-INF/admin/main/type/{1}.jsp</result>
		</action>
	</package>
<!-- 标签 -->
	<package name="tag" namespace="/admin/tag" extends="admin">
		<action name="*" method="{1}" class="tagAction">
			<result type="json" name="json-save" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="json" name="json-delete" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="json" name="json-switchHidden" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="dispatcher" >/WEB-INF/admin/main/tag/{1}.jsp</result>
		</action>
	</package>
<!-- 图片 -->
	<package name="image" namespace="/admin/image" extends="admin">
		<action name="*" method="{1}" class="imageAction">
			<result type="json" name="json-save" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="json" name="json-delete" >
				<param name="root">jsonMap</param>
 				<param name="noCache">true</param>
 				<param name="excludeNullProperties">true</param> 
			</result>
			<result type="dispatcher" >/WEB-INF/admin/main/image/{1}.jsp</result>
		</action>
	</package>
	
</struts>
