<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.action.extension" value="action,jap" />
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.ui.theme" value="simple" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.i18n.reload" value="true" />
    <constant name="struts.configuration.xml.reload" value="true" />
    

    <package name="default" namespace="/" extends="struts-default">
		<interceptors>  
			<!-- 用户认证拦截器 -->
            <interceptor name="authenticate" class="org.luyanfeng.myblog.authenticate.AuthenticateInterceptor" />  
            <interceptor-stack name="loginStack">  
                <interceptor-ref name="authenticate" />  
                <interceptor-ref name="defaultStack" />  
            </interceptor-stack>  
        </interceptors>


        <default-action-ref name="noPage" />

        <global-results>
            <result name="error">/WEB-INF/comm/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>
        <action name="noPage">
            <result>/WEB-INF/comm/404.jsp</result>
        </action>

    </package>

	<include file="struts-actions.xml" />

</struts>
